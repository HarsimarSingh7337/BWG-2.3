<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:fillViewport="true"
    tools:context=".inward_scanner_options">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp">

    <Button
        android:id="@+id/btn_showresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/showresult"
        android:textColor="@color/white"
        android:background="@drawable/custom_button_layout"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_mismatched_isbn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/showmismatchedisbnlist"
        android:textColor="@color/white"
        android:layout_below="@id/btn_showresult"
        android:background="@drawable/custom_button_layout"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_marginBottom="20dp"/>


    <Button
        android:id="@+id/btn_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/export"
        android:textColor="@color/white"
        android:layout_below="@id/btn_mismatched_isbn"
        android:background="@drawable/custom_button_layout"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discard"
        android:layout_below="@id/btn_export"
        android:textColor="@color/white"
        android:background="@drawable/custom_button_layout"
        style="@style/TextAppearance.AppCompat.Large" />
    </RelativeLayout>
</ScrollView>